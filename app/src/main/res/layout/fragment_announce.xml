<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/direction"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:background="#AAA" />
    <ImageView
            android:id="@+id/category"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/direction"
            android:layout_alignTop="@+id/direction"
            tools:background="#AAA" />
    <TextView
            android:id="@+id/announceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/category"
            android:layout_alignTop="@+id/category"
            android:textStyle="bold"
            tools:text="Pseudo" />

    <TextView android:id="@+id/description"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@android:color/black"
              android:layout_alignLeft="@+id/announceId"
              android:layout_below="@+id/announceId"
              tools:text="Texte de mon tweet" />

    <!--TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"/>

    <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem"/-->
</LinearLayout>
