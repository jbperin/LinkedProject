<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="biz.perin.jibe.linkedproject.AccountActivity"
        android:orientation="vertical">

    <TextView
            android:text="Synthese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSyntheseAccount"
            android:lines="4"/>

    <Button
            android:text="Ajouter Transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btNewTransaction"/>

    <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/listTransaction"
            android:name="biz.perin.jibe.linkedproject.TransactionFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layoutManager="LinearLayoutManager"
            tools:context="biz.perin.jibe.linkedproject.TransactionFragment"
            tools:listitem="@layout/fragment_transaction"/>
</LinearLayout>
